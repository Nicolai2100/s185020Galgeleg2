<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/list_elem_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:scaleType="centerCrop"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/list_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/list_elem_drawable"
        android:layout_toEndOf="@+id/list_elem_drawable"
        android:layout_toRightOf="@+id/list_elem_drawable"
        android:text="overskrift"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"/>

</RelativeLayout>
